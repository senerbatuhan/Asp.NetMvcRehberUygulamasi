@{
}


<div class="container card col-xl-6 col-lg-8 col-md-8 col-sm-12 p-3">
    <h2 class="card-title">Kişi Güncelle</h2>
    <form action="/Kisi/Guncelle" method="post" class="form-horizontal">
        @*güncellenecek id almazsak gönderemiyoruz patlıyor.*@
        @Html.Hidden("id", Model.Id)
        <div class="form-group">
            <label class="card-title">Ad:</label>
            <input type="text" class="form-control" name="Ad" value="@Model.Ad" />
        </div>
        <div class="form-group">
            <label class="card-title">Soyad:</label>
            <input type="text" class="form-control" name="Soyad" value="@Model.Soyad" />
        </div>
        <div class="form-group">
            <label class="card-title">Telefon:</label>
            <input type="text" class="form-control" name="Telefon" value="@Model.Telefon" />
        </div>
        <button class="btn btn-primary" type="submit">
            <i class="mr-2 fa fa-save"></i>
            <span>Güncelle</span>
        </button>
    </form>
</div>






