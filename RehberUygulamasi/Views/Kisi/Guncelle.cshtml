@{
}


<div class="col-xl-6 col-lg-8 col-md-8 col-sm-12 ">
    <h2>Kişi Güncelle</h2>
    <form action="/Kisi/Guncelle" method="post" class="form-horizontal">
        @*güncellenecek id almazsak gönderemiyoruz patlıyor.*@
        @Html.Hidden("id", Model.Id)
        <div class="form-group">
            <label>Ad:</label>
            <input type="text" class="form-control" name="Ad" value="@Model.Ad" />
        </div>
        <div class="form-group">
            <label>Soyad:</label>
            <input type="text" class="form-control" name="Soyad" value="@Model.Soyad" />
        </div>
        <div class="form-group">
            <label>Telefon:</label>
            <input type="text" class="form-control" name="Telefon" value="@Model.Telefon" />
        </div>
        <button class="btn btn-primary" type="submit">
            <i class="mr-2 fa fa-save"></i>
            <span>Güncelle</span>
        </button>
    </form>
</div>






